{
  "compilerOptions": {
    "incremental": true,
    "module": "ES2022",
    "outDir": "dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "target": "ES2019",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
